        <!-- API 11 theme customizations can go here. -->
        <item name="colorAccent">@color/primary_material_light</item>
        <item name="colorControlActivated">@color/azulClaro</item>
        <item name="colorControlHighlight">@color/azulClaro</item>

    </style>

</resources>